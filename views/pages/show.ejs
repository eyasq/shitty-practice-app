<% layout('./layouts/boilerplate.ejs') %>

<div class="row">
            <div class="m-3 col-6 offset-3 border " style="max-width: 40rem; max-height: 25rem; object-fit: cover;">
                <img src="<%=rest.image%>" class="card-img-top mt-2" alt="">
                <div class="card-body">
                  <h5 class="card-title"><%=rest.name%></h5>
                  <p class="card-text"><%= rest.description%></p>
                  <p class="card-text"><%= rest.location%></p>
                  <p class="card-text">Pricing: <span class="text-danger "><%= rest.price%></span></p>
                  <a href="/home/<%=rest._id%>/edit" class="btn btn-success">Edit Restauraunt</a>
                  <form action="/home/<%=rest._id%>?_method=delete" method="post" class="mt-3 mb-3">
                  <button  class="btn btn-danger">Delete Restauraunt</button>
                </form>
                </div>
              </div>
    </div>

</div>