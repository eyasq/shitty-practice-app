<% layout('./layouts/boilerplate.ejs') %>

<h1 class="mt-3">Bidya Restauraunt Guide:</h1>
<div class="restaurants">
    <% for(let rest of rests){ %>
        <div class="card m-3 col-6 offset-3" style="width: 35rem; " >
            <img src="<%=rest.image%>" class="card-img-top" alt="restaurant image" style="max-width: 40rem; max-height: 25rem; object-fit: cover;">
            <div class="card-body">
              <h5 class="card-title"><%=rest.name%></h5>
              <p class="card-text"><%= rest.description%></p>
              <p class="card-text"><%= rest.location%></p>
              <p class="card-text">Pricing: <span class="text-danger "><%= rest.price%></span></p>
              <a href="/home/<%=rest._id%>" class="btn btn-primary">اظهر المزيد</a>
            </div>
          </div>
        <% } %>
</div>
